<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
<style>

.exh_title {
  font-weight: 500; 
  text-align: right; 
  padding-right: 10px;
  width: 50%;
  color: #FFF;
}

.exh_title > a:link {
  font-weight: 500; 
  /*text-decoration: underline !important;*/
  color: #FFF;
}

.exh_desc {
  font-weight: 300; 
  text-align: left; 
  padding-left: 10px;
  width: 50%;
  color: #FFF;
}

</style>


<h5>
<table border=0 width="100%" height="90%" style="margin:auto !important">

  <% @exhibitions.each do |exhibition| %>
    <tr>
      <% if exhibition.link.present? %>
        <%= link_to exhibition.link, :target => "_blank", :class => "exh_link" do %>
          <td class="exh_title">
            <%= link_to exhibition.name, exhibition.link, :target => "_blank", :class => "exh_link" %>
          </td>
          <td class="exh_desc">
            <%= link_to exhibition.starts_at.to_s(:month_and_year) %>. <%= link_to exhibition.location, exhibition.link, :target => "_blank", :class => "exh_link" %> <%= link_to "<i class='fa fa-long-arrow-right'></i>".html_safe, exhibition.link, :target => "_blank", :class => "exh_link" %>
          </td>
        <% end %>

      <% else %>
        <td class="exh_title">  
          <%= exhibition.name %> 
        </td>  
        </td>
          <td class="exh_desc">
            <%= exhibition.starts_at.to_s(:month_and_year) %>. <%= exhibition.location %>
          </td>          
      <% end %>

    </tr>
  <% end %>

  <tr>
    <td class="exh_title">
      </br>
    </td>
  </tr>

  <tr>
    <td class="exh_title">
      2005 BFA
    </td>
    <td class="exh_desc">
      Rhode Island School of Design
    </td>
  </tr>
  <tr>
    <td class="exh_title">
      2008 MA
    </td>
    <td class="exh_desc">
      School of Visual Arts, NY
    </td>
  </tr>
  <tr>
    <td class="exh_title">
      2016 MFA
    </td>
    <td class="exh_desc">
      University of Pennsylvania
    </td>
  </tr>

</table>
</h5>

